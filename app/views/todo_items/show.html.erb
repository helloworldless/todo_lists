<h1>Show Todo Item</h1>
<p id="notice"><%= notice %></p>
<p>
  <strong>List Name:</strong>
  <%= @todo_list.list_name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @todo_item.title %>
</p>

<p>
  <strong>Due Date:</strong>
  <%= @todo_item.due_date %>
</p>

<p>
  <strong>Description:</strong>
  <%= @todo_item.description %>
</p>

<p>
  <strong>Completed:</strong>
  <%if @todo_item.completed.nil? %>
  	false
  <% else %>
  	<%= @todo_item.completed %>
   <% end %>
</p>

<footer>
<nav>
<%= link_to 'Edit', edit_todo_list_todo_item_path(@todo_list, @todo_item) %> |
<%= link_to 'Destroy', todo_list_todo_item_path(@todo_list, @todo_item), method: :delete %> |
<%= link_to 'Back', @todo_list %>
</nav>
</footer>