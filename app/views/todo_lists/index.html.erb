<p id="notice"><%= notice %></p>

<h1>Listing Todo Lists</h1>

<table>
  <thead>
    <tr>
      <th>List Name</th>
      <th>Due Date</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= todo_list.list_name %></td>
        <td><%= todo_list.list_due_date %></td>
        <td><%= link_to 'Show', todo_list %></td>
        <td><%= link_to 'Edit', edit_todo_list_path(todo_list) %></td>
        <td><%= link_to 'Destroy', todo_list, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="pagination">
<%= will_paginate @todo_lists %>
</div>
<br>

<%= link_to 'New Todo list', new_todo_list_path %>
